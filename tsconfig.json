{
  "compileOnSave": false,
  "compilerOptions": {
    "types": ["node"],
    "lib": ["es2015"],
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.d.ts"]
}
